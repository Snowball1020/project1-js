<!--
  Step 1: The form must be sharable between the new and edit views.
-->

<form action="<%= (typeof actionPath === 'undefined') ? '/items' : actionPath %>" method="post">

 <div class="form-group">
    <label for="user_id">Hello, <%= user.firstName %> <%= user.lastName %>. What would you like to sell today?</label>
  </div>


  <div class="form-group">
    <label for="name">Product Name:</label>
    <input class="form-control" type="text" name="name" required value="<%= formData.name %>">
  </div>
  
  <div class="form-group">
    <label for="description">Description and Comments:</label>
    <input class="form-control" type="text" name="description" required value="<%= formData.description %>">
  </div>

  <div class="form-group">
    <label for="price">Price:</label>
    <input class="form-control" type="number" name="price" required value="<%= formData.price %>">
  </div>

  <div class="form-group">

    <label for="status">Status:</label>
    <select class="form-control" id="status" name="status" value="<%= formData.status %>">
      <option value="ON SALE">ON SALE</option>
      <option value="SOLD OUT">SOLD OUT</option>
    </select>
</div>

  <input type="hidden" value="<%= formData._id %>" name="id">

  <div class="form-group">
    <button class="btn btn-success">Post your item</button>
  </div>
</form>